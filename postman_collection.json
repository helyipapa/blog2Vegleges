  "item": [
    {
      "name": "Auth",
      "description": "Group: Authentication (register, login, logout)",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"name\": \"Postman Reg\",\n  \"email\": \"pm.reg+{{Math.floor(Math.random()*1000)}}@example.hu\",\n  \"password\": \"password\"\n}" },
            "url": { "raw": "{{baseUrl}}/api/register", "host": ["{{baseUrl}}"], "path": ["api","register"] }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 201 or 200', function () { pm.expect(pm.response.code).to.be.oneOf([200,201]); });",
                  "var json = pm.response.json();",
                  "if (json.id) { pm.collectionVariables.set('lastUserId', json.id); }"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"email\": \"teszt.user@example.hu\",\n  \"password\": \"password\"\n}" },
            "url": { "raw": "{{baseUrl}}/api/login", "host": ["{{baseUrl}}"], "path": ["api","login"] }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 200', function () { pm.response.to.have.status(200); });",
                  "var json = pm.response.json();",
                  "// Try common token fields: access_token, token, token.access_token",
                  "var token = json.access_token || json.token || (json.data && json.data.access_token) || (json.data && json.data.token) || null;",
                  "pm.test('Token is present', function () { pm.expect(!!token).to.be.true; });",
                  "if (token) { pm.collectionVariables.set('authToken', token); }"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{authToken}}" }
            ],
            "url": { "raw": "{{baseUrl}}/api/logout", "host": ["{{baseUrl}}"], "path": ["api","logout"] }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 200 or 204', function () { pm.expect(pm.response.code).to.be.oneOf([200,204]); });",
                  "pm.collectionVariables.unset('authToken');",
                  "pm.test('authToken cleared', function () { pm.expect(pm.collectionVariables.get('authToken')).to.be.oneOf(['', null]); });"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    },
